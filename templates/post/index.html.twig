{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container">

    <h1>Lista de Blogs</h1>

    <table border="1" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>TÃ­tulo</th>
                <th>Fecha</th>
                <th>Autor</th>
                <th>Imagen</th>

            </tr>

        </thead>
        <tbody>
            {% for b in blog%}
            <tr>
               <td>{{b.getTitulo()}}</td> 
               <td>{{b.getFecha()|date ('d/m/y') }}</td>
               <td>{{b.getAutor().getNombre()}}</td> 
               <td>{{b.getImagen()}}</td> 
            </tr>
            {%else%}
            <p> no hay resultados.</p>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}