{% extends 'base.html.twig' %}

{% block title %}Lista de blogs!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
   
</style>

<div class="container">
    <div class="col-lg-10">
        <h1>Lista de Blogs</h1>

        <table border="1" class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Fecha</th>
                    <td>Opción</td>
                </tr>

            </thead>
            <tbody>
                {% for b in blog%}
                <tr>
                    <td>{{b.getTitulo()}}</td>
                    <td>{{b.getFecha()|date ('d/m/y') }}</td>
                    <td><a href="{{path('post_show',{'id':b.getId()})}}">Ver</a></td>
                </tr>
                {%else%}
                <p> no hay resultados.</p>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
</div>
{% endblock %}