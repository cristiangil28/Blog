{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
<div class="container fluid">

    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h2>{{post.titulo}}</h2>
        </div>

        <div class="panel-body">
            <div class="row text-center">
                    <img src="/images/{{post.getImagen()}}" class="rounded float-right" height="300px">
            </div>
            
            <div class="row text-center">
                <b>Autor:</b>{{post.getAutor().getNombre()}} {{post.getAutor().getApellido()}} <b>Fecha:</b>{{post.getFecha|date('d/m/y')}}
            </div>
            <br>
            <div class="row text-justify">
                <p>{{post.getTexto()}}</p>
            
            </div>
        </div>

    </div>
</div>
{% endblock %}